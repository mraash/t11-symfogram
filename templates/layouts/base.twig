<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Document{% endblock %}</title>
    </head>
    <body>
        {% for message in app.flashes('error') %}
            <div>Error: {{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div>Success: {{ message }}</div>
        {% endfor %}

        {% block body %}{% endblock %}
    </body>
</html>
