{% extends 'layouts/public.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
    <h2>Login</h2>
    <form action="{{ path('actions.login') }}" method="post">
        <div>
            <label for="email">Email:</label>
            <input
                id="email"
                name="email"
            >
        </div>
        <div>
            <label for="password">Password:</label>
            <input
                id="password"
                name="password"
                type="password"
            >
        </div>
        <div>
            <a href="{{ path('pages.register') }}">Register</a>
        </div>
        <button type="submit" style="margin-top: 5px;">
            Login
        </button>
    </form>
{% endblock %}
