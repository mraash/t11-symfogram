{% extends 'layouts/public.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <h2>Register</h2>
    <form action="{{ path('actions.register') }}" method="post">
        <div>
            <label for="email">Email:</label>
            <input
                id="email"
                name="email"
            >
        </div>
        <div>
            <label for="password">Password:</label>
            <input
                id="password"
                name="password"
                type="password"
            >
        </div>
        <div>
            <label for="password_repeat">Repeat password:</label>
            <input
                id="password_repeat"
                name="password_repeat"
                type="password"
            >
        </div>
        <div>
            <a href="{{ path('pages.login') }}">Log in</a>
        </div>
        <button type="submit" style="margin-top: 5px;">
            Register
        </button>
    </form>
{% endblock %}
